<div id="bodyRightPan">
	<div class="bodyRightPanBlock">
      <h2>Meetings:</h2>
        <% @exhibitor.meetings.each do |c| %>
          <div style="overflow:hidden; padding:0px 1em 1.2em;">
          	<div style="width:100%; border-bottom:1px solid #999;"><%= link_to c.name, c %></div>
          	<div style="float:right;">
          		<div style="float:left;"><center><%=c.start_date.strftime("%m/%d/%Y")%><br /><%=c.start_date.strftime("%I:%M %p")%></center></div>
          		<div style="float:left; padding:0px .75em; vertical-align: middle; line-height: 3em;">&mdash;</div>
          		<div style="float:left;"><center><%=c.end_time.strftime("%m/%d/%Y")%><br /><%=c.end_time.strftime("%I:%M %p")%></center></div>
          	</div></div>
        <% end %>
	</div>
</div>
<h1>Exhibitor Details</h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @exhibitor.name %>
</p>

<p>
  <b>Description:</b>
  <%= @exhibitor.description %>
</p>

<p>
  <b>Sponsor: <span><% if @exhibitor.meetings.size == 0%>No<%else%>Yes<%end%></span></b>
  <% @exhibitor.meetings.each do |c| %>
    <%= raw("<li>" + c.name + "</li>") %>
  <% end %>
</p>

<p>
  <b>Exhibitor category:</b>
  <%= @exhibitor.exhibitor_category.name %>
</p>


<%= link_to 'Edit', edit_exhibitor_path(@exhibitor) %> |
<%= link_to 'Back', exhibitors_path %>
